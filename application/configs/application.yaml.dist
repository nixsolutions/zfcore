    view:
      title: Site based on CMF ZFCore
      doctype: HTML5
      charset: UTF-8
      encoding: UTF-8
      contentType: text/html; charset=UTF-8
      meta:
        httpEquiv:
          Content-Language: en-US
      helperPath:
        Core_View_Helper: Core/View/Helper
        Application_View_Helper: APPLICATION_PATH/layouts/helpers
        Comments_View_Helper: APPLICATION_PATH/modules/comments/views/helpers
      filterPath:
        Core_View_Filter: Core/View/Filter
        Application_View_Filter: APPLICATION_PATH/layouts/filters
      scriptPath:
        - APPLICATION_PATH/views/scripts
    navigation:
      source:
        dashboard: config
        default: config
      config: navigation
      cache: navigation
testing:
  _extends: production
  phpSettings:
    display_startup_errors: on
    display_errors: on
  resources:
    layout:
      layout: default/layout
    db:
      adapter: Pdo Mysql
      params:
        host: hippo.nixsolutions.com
        username: d_unittest
        password: unittest
        dbname: p_zfc_test
        persistent: on
    frontController:
      defaultModule: index
      plugins:
        acl:
          options:
            allowAll: off
    navigation:
      source:
        dashboard: config
        default: config
      config: navigation
      cache: navigation
development:
  _extends: production
  phpSettings:
    display_startup_errors: on
    display_errors: on
    error_reporting: E_ALL|E_STRICT
  resources:
    frontController:
      params:
        displayExceptions: on
      plugins:
        debug:
          class: Core_Controller_Plugin_Debug
    db:
      params:
        profiler:
          enabled: on
          class: Zend_Db_Profiler_Firebug
